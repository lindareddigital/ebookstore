{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/store": ["./src/store"],
      "@/*": ["./*"],
      "@/public/*": ["./public/*"],
      "@/styles/*": ["./styles/*"],
      // "@/components": ["./src/components/*"]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
